<h1>Website Record Listing</h1>

<%= link_to 'New Record', new_website_path %>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>

  <% @websites.each do |website| %>
    <tr>
      <td><%= website.name %></td>
      <td><%= link_to 'Show', website_path(website) %></td>
      <td><%= link_to 'Edit', edit_website_path(website) %></td>
      <td><%= link_to 'Delete', website_path(website), method: :delete, data: { confirm: 'Are you sure about that?' } %></td>
    </tr>
  <% end %>
</table>

<script>
    $(document).ready(function() {
        var stripeTable = function(table) { //stripe the table (jQuery selector)
            table.find('tr').removeClass('striped').filter(':visible:even').addClass('striped');
        };
        $('table').filterTable({
            callback: function(term, table) { stripeTable(table); } //call the striping after every change to the filter term
        });
        stripeTable($('table')); //stripe the table for the first time
    });
</script>
